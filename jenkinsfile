
pipeline {
  
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        script {
		'git clone https://abbeyowokoya@bitbucket.org/devsecopsnpss/npss-project.git'
      }
    }
    stage('Install Maven Dependencies') {
      steps{
        script {
          mvn dependency:purge-local-repository
        }
      }
    }
    stage('Deploy Image') {
      steps{
        script {
          docker.withRegistry( '', registryCredential ) {
            dockerImage.push()
          }
        }
      }
    }
    stage('Remove Unused docker image') {
      steps{
        sh "docker rmi $registry:$BUILD_NUMBER"
      }
    }
  }
 }
}
