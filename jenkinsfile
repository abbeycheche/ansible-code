pipeline {
  agent any
  stages {
        
    stage('Cloning Git') {
      steps {
        git 'https://github.com/abbeycheche/ansible-code.git'
      }
    }
        
    stage('Install dependencies') {
      steps {
        sh 'yum npm install -y'
      }
    }
     
    stage('Test') {
      steps {
         sh 'npm test'
      }
    }      
  }
}
