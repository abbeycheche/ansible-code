pipeline {
  agent any
  stages {
        
    stage('Cloning Git') {
      steps {
        git 'https://github.com/abbeycheche/ansible-code.git'
      }
    }
    
    stage('Add NodeSource yum repository ') {
      steps {
        sh "curl -sL https://rpm.nodesource.com/setup_10.x | sudo bash -"
      }
    }
        
    stage('Install Nodejs') {
      steps {
        sh "sudo yum install nodejs"
      }
    }
     
    stage('Verify the Node.js and npm Installation') {
      steps {
         sh 'node --version'
         sh 'npm --version'
      }
    }      
  }
}
